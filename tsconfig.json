{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": false,
    "skipLibCheck": true,
    "allowJs": true,
    "rootDir": "src",
    "target": "es2022",
    "module": "es2022",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "types": ["jest"],
    "outDir": "./dist",
    "declaration": true
  },
  "include": ["src/modules/**/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
